<div class="m-3 bg-dark rounded-4 p-3">
  <h1 class="text-white"> Registro </h1>
  <form action="/api/sessions/register" method="POST">
    <div class="form-group">
      <label for="first_name" class="text-white"> Nombre </label>
      <input
        type="text"
        name="first_name"
        id="first_name"
        class="form-control"
      />
    </div>

    <div class="form-group">
      <label for="last_name" class="text-white"> Apellido </label>
      <input type="text" name="last_name" id="last_name" class="form-control" />
    </div>

    <div class="form-group">
      <label for="email" class="text-white"> Email </label>
      <input type="email" name="email" id="email" class="form-control" />
    </div>

    <div class="form-group">
      <label for="age" class="text-white"> Edad </label>
      <input type="number" name="age" id="age" class="form-control" />
    </div>

    <div class="form-group">
      <label for="password" class="text-white"> Password </label>
      <input
        type="password"
        name="password"
        id="password"
        class="form-control"
      />
    </div>

    <div>
      <a class="btn btn-info btn-sm mt-2" href="/api/sessions/github">
        Entrar con Github
      </a>
    </div>
    <button type="submit" class="btn btn-info btn-sm mt-2"> Registrarse </button>
  </form>

  <div class="mt-3 d-flex gap-2">
    <a href="/" class="btn btn-info btn-sm">
      <i class="bi bi-house-door-fill"></i> Home
    </a>
    <a href="/login" class="btn btn-success btn-sm">
      <i class="bi bi-box-arrow-in-right"></i> Iniciar sesi√≥n
    </a>
  </div>
</div>
